<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-md-auto">
      <h1>Users</h1>

      <%= link_to 'New User', new_user_path, class:"btn btn-outline-danger mb-4", data: { bs_toggle: 'modal', bs_target: "#newUserModal", remote: true} %>

      <table class="table table-striped text-center mt-5">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Contact</th>
            <th colspan="3">operations</th>
          </tr>
        </thead>

        <tbody id="usersTable"> 
          <% @users.each do |user| %>
          <%= render 'user_row' ,user: user %>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="newUserModal" tabindex="-1" aria-labelledby="newUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newUserModalLabel">Create New User</h5>
        <button type="button" class="btn-close lg" data-bs-dismiss="modal" aria-label="Close" data-remote="true"></button>
      </div>
      <div id="newUserForm">
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editUserModalLabel">Edit User</h5>
        <button type="button" class="btn-close lg" data-bs-dismiss="modal" aria-label="Close" data-remote="true"></button>
      </div>
      <div id="editUserForm">
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="showUserModal" tabindex="-1" aria-labelledby="showUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showUserModalLabel">User Details</h5>
        <button type="button" class="btn-close lg" data-bs-dismiss="modal" aria-label="Close" data-remote="true"></button>
      </div>
      <div id="showUserDetails">
      </div>
    </div>
  </div>
</div>